// 나이제한 입장 팝업
$(document).ready(function(){
    if (sessionStorage.getItem('ageVerified') !== 'true') {
        $('.ageCut, .ageCut + .black_bg').css('display', 'block');
        $('body').addClass('not_scroll');
    }
});
$('#outButton').click(function(){
   if (window.history.length > 1) {
      window.history.back();
    } else {
      window.close();
    }
})
$('#goButton').click(function(){
  sessionStorage.setItem('ageVerified', 'true');
  $('.ageCut, .ageCut + .black_bg').css('display', 'none');
  $('body').removeClass('not_scroll'); 
})

  
// 년월일출력
const yearSelect = document.getElementById("yearSelect");
for (let year = 2005; year >= 1940; year--) {
    const option = document.createElement("option");
    option.value = year;
    option.text = year;
    yearSelect.appendChild(option);
}
const monthSelect = document.getElementById("monthSelect");
for (let month = 1; month <= 12; month++) {
const optionMonth = document.createElement("option");
optionMonth.value = month;
optionMonth.text = month;
monthSelect.appendChild(optionMonth);
}
const daySelect = document.getElementById("daySelect");
for (let day = 1; day <= 31; day++) {
const optionDay = document.createElement("option");
optionDay.value = day;
optionDay.text = day;
daySelect.appendChild(optionDay);
}

