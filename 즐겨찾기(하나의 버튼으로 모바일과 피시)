//즐겨찾기
document.getElementById("bookmarkButton").addEventListener("click", function() {
    // 사용자 에이전트 확인
    const isMobile = /Mobi|Android|iPhone|iPad|iPod/i.test(navigator.userAgent);

    if (isMobile) {
        // 모바일 버전 즐겨찾기 스크립트
        addMobileBookmark();
    } else {
        // PC 버전 즐겨찾기 스크립트
        addPCBookmark();
    }
});

//모바일
function addMobileBookmark() {
    alert('모바일 브라우저에서는 즐겨찾기를 추가하려면 브라우저 메뉴에서 "북마크 추가"를 선택하세요.');
}
//PC
function addPCBookmark() {
    const title = ""; // 즐겨찾기 제목
    const url = window.location.href; // 현재 페이지 URL

    if (window.sidebar && window.sidebar.addPanel) { // Firefox
        window.sidebar.addPanel(title, url, '');
    } else if (window.external && ('AddFavorite' in window.external)) { // Internet Explorer
        window.external.AddFavorite(url, title);
    } else if (window.opera && window.print) { // Opera
        alert('CTRL+D를 눌러 즐겨찾기에 추가하세요.');
    } else { // 기타 브라우저
        alert('즐겨찾기를 추가하려면 브라우저의 즐겨찾기 기능을 사용하세요.'); 
    }
}
