const dog = {
  name: "만두",
  sound: "멍멍",
  say: function say() {
    console.log(this.sound); //여기서 this는 dog
  }
};
dog.say(); //멍멍
const dog1 = {
  name: "만두",
  sound: "멍멍",
  say: function () {
    console.log(this.sound); //여기서 this는 dog
  }
};
dog1.say(); //멍멍
const dog2 = {
  name: "만두",
  sound: "멍멍",
  say() {
    console.log(this.sound); //여기서 this는 dog
  }
};
dog2.say(); //멍멍

