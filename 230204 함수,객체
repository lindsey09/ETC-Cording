const cat = {
  name: "냐옹이",
  sound: "야옹"
};
cat.say = dog.say;
dog.say(); //멍멍
cat.say(); //야옹

const catSay = cat.say;
catSay(); // error 함수를 꺼내면 this와의 관계가 사라짐




